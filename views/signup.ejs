  <body class="text-center">

<main class="form-signin">
    <img class="mb-4 signupimage" src="https://selfregistration.cowin.gov.in/assets/images/login-screen.svg" alt="" width="120" height="120">
    <h1 class="h3 mb-3 fw-normal">Please Signup</h1>

    <form action="/signup" method="POST">
      <div class="form-floating input-container">
      <input type="text" class="form-control top input-field input" name="hospital" placeholder="Hospital Name" autocomplete="off" autofocus required>
      </div>
      <div class="form-floating input-container">
      <input type="email" class="form-control middle input-field input" name="emailid" placeholder="E-mail" autocomplete="off" required>
      </div>
      <div class="form-floating input-container">
      <input type="text" class="form-control bottom input-field input" name="city" placeholder="City" autocomplete="off" required>
      </div>
      <button class="w-100 btn btn-lg btn-primary button" type="submit">Signup</button>
    </form>
